<h2>Edit your profile</h2>
<br>

<%= form_for @user do |form| %>

<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, class: 'form-control', style:'width: 300px;' %>
</div>

<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, class: 'form-control', style:'width: 300px;' %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, class: 'form-control', style:'width: 300px;' %>
</div>
<br>

<div class="submit-field">
	<%= form.submit "Update Details", class: 'btn btn-default'%>
</div>

<% end %>

